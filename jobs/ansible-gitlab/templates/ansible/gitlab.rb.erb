<%
  server = "http://" + spec.address
  if_p('gitlab.external_url') do |prop|
    server = prop
  end
%>
external_url '<%= server %>'
gitlab_rails['backup_path'] = "<%= p('gitlab.backup_path') %>"
gitlab_rails['backup_archive_permissions'] = 0600
gitlab_rails['backup_keep_time'] = "<%= p('gitlab.backup_keep_time') %>"

gitlab_rails['log_directory'] = "<%= p('gitlab.log_rail') %>"
unicorn['log_directory'] = "<%= p('gitlab.log_unicorn') %>"
registry['log_directory'] = "<%= p('gitlab.log_registry') %>"

postgresql['dynamic_shared_memory_type'] = 'none'
postgresql['shared_buffers'] = "256MB"
